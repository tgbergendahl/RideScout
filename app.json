{
  "expo": {
    "name": "RideScout",
    "slug": "RideScout",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png", // Ensure this file exists
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png", // Ensure this file exists
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png", // Ensure this file exists
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png" // Ensure this file exists
    }
  }
}
